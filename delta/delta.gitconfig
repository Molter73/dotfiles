[include]
    path = catppuccin.gitconfig
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    features = catppuccin-mocha
    line-numbers = true
    side-by-side = true
[merge]
    conflictStyle = zdiff3
